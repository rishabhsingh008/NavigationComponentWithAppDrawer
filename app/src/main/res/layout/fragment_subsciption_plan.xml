<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/healthcare_logo"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/mainLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/buyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <!--<TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName BMI xxx"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="0dp"
            />-->

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Months Plan Benefits"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/btn_star"
                    android:text="Free doctor consultation"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"></TextView>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/btn_star"
                    android:text="24*7 hours support"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"></TextView>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/btn_star"
                    android:text="Unlimited chats"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"></TextView>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/btn_star"
                    android:text="Free diet plans"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"></TextView>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/btn_star"
                    android:text="Free yoga classes"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="@string/actual_fee_inr_2499"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/dark_green"
                        android:paddingLeft="0dp"></TextView>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="You Save INR 1000"
                        android:textColor="@color/dark_green"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:paddingLeft="0dp"></TextView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>